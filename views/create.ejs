<%- include("partials/header.ejs") %>

    <div class="main__header-container">
        <h1 class="main__header-text">Create Post</h1>
    </div>

    <div class="create__form-container">
        <form action="/create" method="POST">
            <div class="create__input-separator">
                <input type="text" name="title" placeholder="Title" autocomplete="off" required />
                <input type="text" name="author" placeholder="Author" autocomplete="off" required />
            </div>
            <textarea name="content" placeholder="Content" required></textarea>
            <button type="submit">Create</button>
        </form>
    </div>


